<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemons: <% @trainer.pokemons.each do |poke| %>
    <li>
        Name: <%= poke.name %>
        Level: <%= poke.level %>
        Health: <%= poke.health %>
        <%= button_to "Damage!", damage_path(id: poke.id), :class => "button small", :method => :patch %>
    </li>
    <% end %>
    <% if @trainer == current_trainer %>
        <%= button_to "Create a new Pokemon!", new_path, :class => "button medium", :method => :get %>
    <% end %>
</p>
